@model PM.Models.PM_UserMetaData 
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
    //Layout = null;
}


<link href="~/dist/css/loginForm.css" rel="stylesheet">


    <!-- class="container"-->
   
    

        <div class="container">
            <div class="login-container" style="font-size:18px ;}">سامانه تعمیر و نگهداری v1.1
                <div id="output"> </div>
                <div class="avatar"></div>
               
                <div class="form-box" >
                  @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
                  {
                    <div style="margin-bottom: 0px" class="input-group">
                        @Html.EditorFor(modell => Model.UserName, new { htmlAttributes = new { @class = "fadeIn second"  } })
                        <span class="input-group-addon" ><i  class="glyphicon glyphicon-user"></i></span>
                      
                    </div>

                                    <div style="margin-bottom: 25px" class="input-group">
                                        @Html.EditorFor(modell => Model.PassWord, new { htmlAttributes = new { @class = "fadeIn third" } })
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                      
                                    </div>

     
                        <button class="btn btn-danger btn-block login" type="submit" style="font-size:15px;">ورود</button>
                        }
                    </div>
            </div>

        </div>
       