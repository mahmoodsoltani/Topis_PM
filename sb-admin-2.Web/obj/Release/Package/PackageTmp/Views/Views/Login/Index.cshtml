@model PM.Models.UserMetaData 
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
    //Layout = null;
}
<style>
    #login-div{
        position:absolute;
        left:40%;
        top:40%;
        border:1px solid #ccc;
        padding:10px 10px;
    }
</style>

<div id="login-div" >
    <!-- class="container"-->
    @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
    {
   <table class="col-md-10 col-md-offset-1" >
       <tr class="login-panel panel panel-default">
       <tr class="panel-heading">
           <td>   </td>
           <td style="text-decoration:underline " class="panel-title">ورود کاربر</td>
       </tr>
       <tr >
           <td class="text-primary">
               @Html.LabelFor(model => model.username)
           </td>
           <td class="text-primary">
               @Html.EditorFor(modell => Model.username)
           </td>
       </tr>
       <tr>
           <td></td>
           <td class="text-warning">
               @Html.ValidationMessageFor( model => model.username)
           </td>
       </tr>

      
       <tr class="panel-group">
           <td class="text-primary">
               @Html.LabelFor(model => model.password)
           </td>
           <td class="text-primary">
               @Html.EditorFor(modell => Model.password)
           </td>
       </tr>
       <tr>
           <td></td>
           <td class="text-warning">
               @Html.ValidationMessageFor(model => model.password)
           </td>
       </tr>
       <tr>
           <td></td>
           <td>
               <input type="submit" name="name" value="Login" class="btn btn-lg btn-success btn-block" />
           </td>
       </tr>
       </tr>
   </table>
    }

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>

